@page
@model webserver.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All"></div>

            <div class="form-group">
                <label asp-for="registerInput.Name"></label>
                <input asp-for="registerInput.Name" class="form-control" />
                <span asp-validation-for="registerInput.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="registerInput.Email"></label>
                <input asp-for="registerInput.Email" class="form-control" />
                <span asp-validation-for="registerInput.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="registerInput.Password"></label>
                <input asp-for="registerInput.Password" class="form-control" />
                <span asp-validation-for="registerInput.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="registerInput.ConfirmPassword"></label>
                <input asp-for="registerInput.ConfirmPassword" class="form-control" />
                <span asp-validation-for="registerInput.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="registerInput.PhoneNumber"></label>
                <input asp-for="registerInput.PhoneNumber" class="form-control" />
                <span asp-validation-for="registerInput.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="registerInput.City"></label>
                <input asp-for="registerInput.City" class="form-control" />
                <span asp-validation-for="registerInput.City" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="registerInput.State"></label>
                <input asp-for="registerInput.State" class="form-control" />
                <span asp-validation-for="registerInput.State" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="registerInput.Country"></label>
                <input asp-for="registerInput.Country" class="form-control" />
                <span asp-validation-for="registerInput.Country" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>
